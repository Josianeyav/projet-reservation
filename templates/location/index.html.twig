{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Slug</th>
                <th>Designation</th>
                <th>Address</th>
                <th>Website</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.slug }}</td>
                <td>{{ location.designation }}</td>
                <td>{{ location.address }}</td>
                <td>{{ location.website }}</td>
                <td>{{ location.phone }}</td>
                <td>
                    <a href="{{ path('location_show', {'slug': location.slug}) }}">show</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_new') }}">Create new</a>
{% endblock %}
